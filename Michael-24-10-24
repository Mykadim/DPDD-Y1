def fn_menu():
    flag = "y"
    while flag == "y":
        menu_decr = """
        01 - Create File
        02 - second option
        03 - third option
        04 - fourth option
        05 - Fifth option
    """
        print(menu_decr)
        option_number = input("Enter the option ")
        if option_number.isdigit() == True:
            option_number = int(option_number)
            if option_number == 1:
                userInput = input("Enter the file name to create")
                file = open(userInput,"x")
            elif option_number == 2:
                print("You select the option 02")
            elif option_number == 3:
                print("You select the option 03") 
            elif option_number == 4:
                print("You select the option 04")  
            elif option_number == 5:
                print("You select the option 05") 
                flag = "n" 
            else:
                print("invalid")
        else:
            print("Please input the integer value")
